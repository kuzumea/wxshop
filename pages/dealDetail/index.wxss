page {
  background: #f2f2f2;
  font-size: 35rpx;
}
.deal-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  margin: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  height: 60vh;
}
.deal-box .item {
  width: 95%;
  border-bottom: 1px solid #d1d0d0;
  display: flex;
  margin: 25rpx 15rpx;
  justify-content: space-between;
}
.deal-box .item .time {
  font-size: 20rpx;
}
.deal-box .item .deal-status {
  background: #3cbf4f;
  color: #fff;
}
.confirm {
  width: 100%;
  height: 75rpx;
  position: fixed;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  bottom: 0;
  background: #fff;
}
.confirm .prize {
  color: #ef0b26;
}
.confirm .conf {
  width: 160rpx;
  height: 80%;
  background: #ef0b26;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 15rpx;
  font-size: 27rpx;
}
.cbox {
  bottom: 0;
  color: #fff;
}
.cbox .menu {
  display: flex;
  margin: 25rpx 15rpx;
  justify-content: center;
  align-items: center;
  background: #e74e44;
  border-radius: 10rpx;
  padding: 15rpx 0;
}
.cbox .menu1 {
  padding: 15rpx 0;
  border-radius: 10rpx;
  display: flex;
  margin: 25rpx 15rpx;
  justify-content: center;
  align-items: center;
  background: #869aa3;
}
